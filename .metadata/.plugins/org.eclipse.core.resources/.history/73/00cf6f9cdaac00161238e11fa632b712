
public class Manager extends Employee{
	
	private double bonus;
	
	public Manager() {
		this("");
	}
	public Manager(String name) {
		this(name, 0.0);
	}
	public Manager(String name, double salary) {
		this(name,salary,"");
	}
	public Manager(String name, double salary, String position) {
		this(name,salary,position,0.0);
	}
	public Manager(String name, double salary, String position, double bonus) {
		super(name, salary, position);
		setBonus(bonus);
	}
	
	
	
	
	public double getTotSalary() 		{	return bonus + getSalary();		}
	public double getBonus() 			{	return bonus;					}
	public void setBonus(double bonus) 	{	this.bonus = bonus;				}
	
}
