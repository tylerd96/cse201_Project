
public class BusBoy extends Employee {
	
private double tips;
	
	public BusBoy() {
		this("");
	}
	public BusBoy(String name) {
		this(name, 0.0);
	}
	public BusBoy(String name, double salary) {
		this(name,salary,0.0);
	}

	public BusBoy(String name, double salary, double tips) {
		super(name, salary, EmployeeType.BUSBOY);
		setTips(tips);
	}
	
	
	public double getTotSalary() 		{	return tips + getSalary();	}
	public double getTips() 			{	return tips;				}
	public void setTips(double tips) 	{	this.tips = tips;			}
}
