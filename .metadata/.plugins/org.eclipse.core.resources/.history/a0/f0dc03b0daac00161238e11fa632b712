
public class Hostess extends Employee {
	
	private double tips;
	
	public Hostess() {
		this("");
	}
	public Hostess(String name) {
		this(name, 0.0);
	}
	public Hostess(String name, double salary) {
		this(name,salary,"");
	}
	public Hostess(String name, double salary, String position) {
		this(name,salary,position,0.0);
	}
	public Hostess(String name, double salary, String position, double tips) {
		super(name, salary, position);
		setTips(tips);
	}
	
	
	public double getTotSalary() 		{	return tips + getSalary();	}
	public double getTips() 			{	return tips;				}
	public void setTips(double tips) 	{	this.tips = tips;			}
	
	
}
